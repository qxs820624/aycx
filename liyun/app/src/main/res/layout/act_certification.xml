<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/comm_style"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="您的账号" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="49dip"
                    android:layout_marginLeft="@dimen/margin80"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="lailaoban"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@color/view_line" />

            <RelativeLayout
                style="@style/comm_style"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="真实姓名" />

                <EditText
                    android:id="@id/txt_realname"
                    android:layout_width="fill_parent"
                    android:layout_height="49dip"
                    android:layout_marginLeft="@dimen/margin80"
                    android:background="@null"
                    android:hint="请输入真实姓名"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@color/view_line" />

            <RelativeLayout
                style="@style/comm_style"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="身份证号" />

                <EditText
                    android:id="@id/txt_idcard"
                    android:layout_width="fill_parent"
                    android:layout_height="49dip"
                    android:layout_marginLeft="@dimen/margin80"
                    android:background="@null"
                    android:hint="请输入身份证号码"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@color/view_line" />

            <RelativeLayout
                style="@style/comm_style"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="邮箱" />

                <EditText
                    android:id="@id/txt_email"
                    android:layout_width="fill_parent"
                    android:layout_height="49dip"
                    android:layout_marginLeft="@dimen/margin80"
                    android:background="@null"
                    android:hint="请输入邮箱"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@color/view_line" />

            <RelativeLayout
                style="@style/comm_style"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="手机号码" />

                <EditText
                    android:id="@id/txt_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="49dip"
                    android:layout_marginLeft="@dimen/margin80"
                    android:background="@null"
                    android:hint="@string/action_input_phonenum"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@color/view_line" />

            <TextView
                android:id="@id/txt_confirm_submit"
                style="@style/textview"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dip"
                android:clickable="true"
                android:enabled="false"
                android:text="确认提交"
                android:textSize="14sp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>